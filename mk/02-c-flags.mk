CFLAGS_COMMON	:= -O2 -std=c99 -g -pedantic-errors -Wall -Wextra -Werror -I$(PATH_MODULES) -D$(PLATFORM)
LFLAGS_COMMON	:=

GIL_BUILD_MODE  := GIL_BUILD_MODE_DEBUG

ifeq ($(GIL_BUILD_MODE), GIL_BUILD_MODE_DEBUG)
CFLAGS_COMMON	+= -DGIL_DEBUG
else ifeq ($(GIL_BUILD_MODE), GIL_BUILD_MODE_RELEASE)
CFLAGS_COMMON 	+= -DGIL_RELEASE
endif
